<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/audio_settings_speakerphone_label"
        android:textAppearance="?textAppearanceSubtitle1"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/speacker_switcher"
        app:layout_constraintEnd_toStartOf="@+id/speacker_switcher"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/speacker_switcher" />

    <androidx.appcompat.widget.AppCompatToggleButton
        android:id="@+id/speacker_switcher"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:textAppearance="?textAppearanceSubtitle1"
        android:textOff="@string/audio_settings_off_label"
        android:textOn="@string/audio_settings_on_label"
        app:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icon_min_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:src="@drawable/ic_volume_min"
        app:layout_constraintBottom_toBottomOf="@+id/volume_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/volume_bar" />

    <ImageView
        android:id="@+id/icon_max_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="26dp"
        android:src="@drawable/ic_volume_max"
        app:layout_constraintBottom_toBottomOf="@+id/volume_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/volume_bar" />

    <SeekBar
        android:id="@+id/volume_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/icon_max_volume"
        app:layout_constraintStart_toEndOf="@+id/icon_min_volume"
        app:layout_constraintTop_toBottomOf="@+id/speacker_switcher" />


</androidx.constraintlayout.widget.ConstraintLayout>